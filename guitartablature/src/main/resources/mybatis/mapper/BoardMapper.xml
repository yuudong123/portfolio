<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yuudong123.guitartablature.mapper.BoardMapper">
  <insert id="write" parameterType="com.yuudong123.guitartablature.domain.BoardVO">
    <![CDATA[
    insert into board values (seq_board_id.nextval, #{title}, #{author}, sysdate, sysdate, #{content})
    ]]>
  </insert>

  <select id="read" resultType="com.yuudong123.guitartablature.domain.BoardVO">
    <![CDATA[ 
    select * from board where boardid = #{id}
    ]]>
  </select>

  <select id="getList" resultType="com.yuudong123.guitartablature.domain.BoardVO">
    <![CDATA[
    select * from board where boardid > 0
    ]]>
  </select>

  <!-- <select id="search" resultType="com.yuudong123.guitartablature.domain.BoardVO">
    <![CDATA[ 
    select *
    from ( select 
    ]]>
  </select> -->

  <delete id="delete">
    <![CDATA[ 
    delete board where boardid = #{id}
    ]]>
  </delete>

  <update id="modify">
    <![CDATA[ 
    update board
    set boardtitle = #{title},
    boardcontent = #{content},
    boardmodifydate = sysdate
    where boardid = #{id}
    ]]>
  </update>
</mapper>